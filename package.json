{
  "name": "ts-type-test",
  "version": "0.1.0",
  "description": "Resolve TypeScript types from inline code - useful for writing type-level tests",
  "main": "index.js",
  "scripts": {
    "test": "jest"
  },
  "keywords": [
    "TypeScript",
    "types",
    "unit",
    "test",
    "typelevel"
  ],
  "author": "Paul Koerbitz <paul@koerbitz.me>",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.1.2",
    "jest": "^22.4.4",
    "ts-jest": "^22.4.6",
    "typescript": "^2.8.3"
  },
  "jest": {
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
        "**/tests/**/*.ts?(x)",
        "**/__tests__/**/*.ts?(x)"
    ],
    "testPathIgnorePatterns": [
        "/node_modules/",
        "/dist/"
    ],
    "moduleFileExtensions": [
        "ts",
        "tsx",
        "js",
        "jsx",
        "json",
        "node"
    ]
  }
}
